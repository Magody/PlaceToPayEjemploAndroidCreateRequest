<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonMainEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generar y enviar petici贸n" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Petici贸n"
            android:textColor="@android:color/holo_green_light" />

        <TextView
            android:id="@+id/textViewMainPeticion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:scrollbars="vertical"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Respuesta"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:id="@+id/textViewMainRespuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:scrollbars="vertical"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/buttonMainIrAlUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ir al URL de PlaceToPay" />

        <Button
            android:id="@+id/buttonMainGetInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obtener informaci贸n actual" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informaci贸n"
            android:textColor="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/textViewMainInformacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:scrollbars="vertical"
            android:textColor="@android:color/black" />


    </LinearLayout>




</ScrollView>